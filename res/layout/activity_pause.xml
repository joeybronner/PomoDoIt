<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pauseActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontGreen"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pomodoit.views.PauseActivity" >

    <ProgressBar
        android:id="@+id/progressBarPause"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="20dip"
        android:minHeight="20dip"
        android:progressDrawable="@drawable/progressbar_color_pause" />

    <TextView
        android:id="@+id/timerPauseValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBarPause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/timerPauseVal"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/ivCoffee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/timerPauseValue"
        android:layout_above="@+id/tvPauseTitle"
        android:layout_gravity="center_horizontal"
        android:alpha=".75"
        android:contentDescription="@string/str_im_coffee"
        android:src="@drawable/im_coffee" />

    <TextView
        android:id="@+id/tvPauseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/msgPause"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />

</RelativeLayout>