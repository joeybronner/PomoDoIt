<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fontRed"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:persistentDrawingCache="all"
    tools:context="com.pomodoit.views.SettingsActivity" >

    <ImageView
        android:id="@+id/ivSoundScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/im_playsound"
        android:alpha=".75" />

    <Switch
        android:id="@+id/switchSoundMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/ivSoundScreen"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:text="@string/msg_soundmode"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    
    <Switch
        android:id="@+id/switchScreenMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/switchSoundMode"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:text="@string/msg_screenmode"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>